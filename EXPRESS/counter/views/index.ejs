<body>
    <div class="container">
        <div class="row">
            <h1>Counter</h1>
        </div>
        <div class="row">
            <div class="col">
                <h1 id="count" class="text-center pt-0"><%= views %></h1>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-center">
                <form action="/"><button class="btn btn-primary">Refresh</button></form>
